# Copy this file to .env.local and update the values

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# Choose ONE of the following MongoDB configurations:

# Option 1: Docker MongoDB (Recommended for development)
MONGODB_URI=mongodb://localhost:27017//indian_investment_platform

# Option 2: Local MongoDB
# MONGODB_URI=mongodb://localhost:27017/indian_investment_platform

# Option 3: MongoDB Atlas (Cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/indian_investment_platform?retryWrites=true&w=majority

# Redis Configuration
REDIS_URL=redis://localhost:6379
# For Docker Redis with password:
# REDIS_URL=redis://:redis123@localhost:6379

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================

# Generate secure secrets using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secure_jwt_secret_key_here_32_chars_minimum
SESSION_SECRET=your_super_secure_session_secret_here_32_chars_minimum
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# ==============================================
# API CONFIGURATION
# ==============================================

NEXT_PUBLIC_API_URL=http://localhost:3000/api
API_RATE_LIMIT=100

# ==============================================
# EXTERNAL APIS (Optional for development)
# ==============================================

# Market Data API (Alpha Vantage, Yahoo Finance, etc.)
MARKET_DATA_API_KEY=

# News API (NewsAPI.org, etc.)
NEWS_API_KEY=

# ==============================================
# AFFILIATE PARTNER APIS (Optional)
# ==============================================

LOAN_PARTNER_API_KEY=
CREDIT_CARD_PARTNER_API_KEY=
BROKER_PARTNER_API_KEY=

# ==============================================
# EMAIL CONFIGURATION (Optional)
# ==============================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# ==============================================
# FILE UPLOAD & STORAGE
# ==============================================

MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# ==============================================
# SECURITY & CORS
# ==============================================

CORS_ORIGIN=http://localhost:3000

# ==============================================
# ANALYTICS (Optional)
# ==============================================

GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=

# ==============================================
# ENVIRONMENT
# ==============================================

NODE_ENV=development
PORT=3000

# ==============================================
# SITE CONFIGURATION
# ==============================================

NEXT_PUBLIC_SITE_URL=http://localhost:3000